<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:salezshark="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <fr.castorflex.android.circularprogressbar.CircularProgressBar
        android:id="@+id/progressBar"
        android:layout_width="@dimen/pb_dimension"
        android:layout_height="@dimen/pb_dimension"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/ic_circle_shadow"
        android:indeterminate="true"
        android:indeterminateOnly="false"
        android:padding="@dimen/padding_medium"
        salezshark:cpb_colors="@array/progress_bar_colors_theme" />
</LinearLayout>